    "@payloadcms/storage-s3": "3.0.0-beta.126",
    "@payloadcms/ui": "3.0.0-beta.126",
    "@t3-oss/env-nextjs": "^0.11",
    "clsx": "^2",
    "cross-env": "^7",
    "iconoir-react": "^7",
    "jiti": "^1",
    "next": "^15",
    "payload": "3.0.0-beta.126",
    "react": "19.0.0-rc-7c8e5e7a-20241101",
    "react-dom": "19.0.0-rc-7c8e5e7a-20241101",
    "sharp": "^0.33",
    "tailwind-merge": "^2",
    "zod": "^3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^8",
    "eslint-config-next": "^15",
    "eslint-config-prettier": "^9",
    "eslint-import-resolver-typescript": "^3",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-prettier": "^5",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.6",
    "stylelint": "^16",
    "stylelint-config-clean-order": "^6",
    "stylelint-config-standard": "^36",
    "tailwindcss": "^3",
    "tsx": "^4",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@19.0.0-rc.1",
