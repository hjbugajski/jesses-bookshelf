{
  "name": "jessesbookshelf.com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "i:dev": "infisical run pnpm dev",
    "dev:clean": "rm -rf .next && rm -rf next-env.d.ts && pnpm dev",
    "i:dev:clean": "infisical run pnpm dev:clean",
    "ci": "payload migrate && pnpm build",
    "build": "next build",
    "i:build": "infisical run pnpm build",
    "start": "next start",
    "i:start": "infisical run pnpm start",
    "migrate": "payload migrate",
    "i:migrate": "infisical run pnpm migrate",
    "migrate:create": "payload migrate:create",
    "i:migrate:create": "infisical run pnpm migrate:create",
    "migrate:dev": "pnpm migrate:clean && pnpm i:migrate:create && pnpm i:migrate",
    "generate:importmap": "infisical run payload generate:importmap",
    "generate:types": "infisical run payload generate:types",
    "lint": "next lint",
    "lint:all": "pnpm prettier && pnpm eslint && pnpm stylelint",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "stylelint": "stylelint '**/*.css' --ignore-path .gitignore",
    "stylelint:fix": "stylelint '**/*.css' --fix --ignore-path .gitignore"
  },
  "packageManager": "pnpm@10.6.5",
  "dependencies": {
    "@payloadcms/db-postgres": "3.29.0",
    "@payloadcms/email-resend": "3.29.0",
    "@payloadcms/live-preview-react": "3.29.0",
    "@payloadcms/next": "3.29.0",
    "@payloadcms/richtext-lexical": "3.29.0",
    "@payloadcms/storage-s3": "3.29.0",
    "@payloadcms/ui": "3.29.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "clsx": "^2.1.1",
    "iconoir-react": "^7.10.1",
    "jiti": "^2.4.2",
    "jsonwebtoken": "^9.0.2",
    "next": "15.2.3",
    "payload": "3.29.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@next/eslint-plugin-next": "15.2.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.25",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.9.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.16.0",
    "stylelint-config-clean-order": "^6.1.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
